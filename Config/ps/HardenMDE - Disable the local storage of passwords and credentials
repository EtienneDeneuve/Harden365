# Disable the local storage of passwords and credentials
if ($(Get-ItemProperty -Path Registry::HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\Lsa).DisableDomainCreds -eq 0) {
    New-ItemProperty -Path 'HKLM:\SYSTEM\CurrentControlSet\Control\Lsa' -Name 'DisableDomainCreds' -Value "1" -PropertyType DWORD -Force }
else {}