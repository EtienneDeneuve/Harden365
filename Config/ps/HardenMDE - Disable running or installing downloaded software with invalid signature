# Disable running or installing downloaded software with invalid signature
if ((Get-ChildItem -Path 'HKLM:\SOFTWARE\Policies\Microsoft\Internet Explorer\').Name -notcontains "HKEY_LOCAL_MACHINE\SOFTWARE\Policies\Microsoft\Internet Explorer\Download"){
    New-Item -Path 'HKLM:\SOFTWARE\Policies\Microsoft\Internet Explorer' -Name 'Download'
    New-ItemProperty -Path 'HKLM:\SOFTWARE\Policies\Microsoft\Internet Explorer\Download' -Name 'RunInvalidSignatures' -Value "0" -PropertyType DWORD -Force}
elseif (-not $(Get-ItemProperty -Path "Registry::HKEY_LOCAL_MACHINE\SOFTWARE\Policies\Microsoft\Internet Explorer\Download").RunInvalidSignatures){
    New-ItemProperty -Path 'HKLM:\SOFTWARE\Policies\Microsoft\Internet Explorer\Download' -Name 'RunInvalidSignatures' -Value "0" -PropertyType DWORD -Force}
else {}